{
  "compilerOptions": {
    "target": "es2023",
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
