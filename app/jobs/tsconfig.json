{
  "compilerOptions": {
    "target": "es2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "#*": ["./src/*"]
    },
    "outDir": "dist",
    "rootDir": "src"
  }
}
