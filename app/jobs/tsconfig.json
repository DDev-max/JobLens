{
  "compilerOptions": {
    "target": "es2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "#*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
